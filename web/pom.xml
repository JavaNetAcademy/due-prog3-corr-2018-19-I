<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>hoe</artifactId>
		<groupId>hu.javanetacademy.hoe</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<artifactId>web</artifactId>
	<packaging>war</packaging>

	<name>web</name>

	<properties>
		<endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>hu.javanetacademy.hoe.user</groupId>
			<artifactId>user-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>hu.javanetacademy.hoe.hero</groupId>
			<artifactId>hero-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>hu.javanetacademy.hoe.pets</groupId>
			<artifactId>pets-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>hu.javanetacademy.hoe.empires</groupId>
			<artifactId>empires-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>hu.javanetacademy.hoe.weapons</groupId>
			<artifactId>weapons-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>hu.javanetacademy.hoe.settlements</groupId>
			<artifactId>settlements-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>hu.javanetacademy.hoe.factories</groupId>
			<artifactId>factories-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>hu.javanetacademy.hoe.job</groupId>
			<artifactId>job-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>hu.javanetacademy.hoe.species</groupId>
			<artifactId>species-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>hu.javanetacademy.hoe.culturalbuilding</groupId>
			<artifactId>culturalbuilding-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>hu.javanetacademy.hoe.skills</groupId>
			<artifactId>skills-web</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
	 <dependency>
	  <groupId>hu.javanetacademy.hoe.web</groupId>
	  <artifactId>vehicles-web</artifactId>
	  <version>1.0-SNAPSHOT</version>
	 </dependency>
	 <dependency>
	  <groupId>hu.javanetacademy.hoe.speciesspecialproperty</groupId>
	  <artifactId>speciesspecialproperty-web</artifactId>
	  <version>1.0-SNAPSHOT</version>
	 </dependency>
	 <dependency>
	  <groupId>hu.javanetacademy.hoe.speciesspecialproperty</groupId>
	  <artifactId>speciesspecialproperty-dao-model</artifactId>
	  <version>1.0-SNAPSHOT</version>
	 </dependency>
	 <dependency>
	  <groupId>hu.javanetacademy.hoe.speciesspecialproperty</groupId>
	  <artifactId>speciesspecialproperty-dao-jdbc</artifactId>
	  <version>1.0-SNAPSHOT</version>
	 </dependency>
	 <dependency>
	  <groupId>${project.groupId}</groupId>
	  <artifactId>speciesspecialproperty-service-object</artifactId>
	  <version>${project.version}</version>
	 </dependency>
	 <dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-web-api</artifactId>
			<version>7.0</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<compilerArguments>
						<endorseddirs>${endorsed.dir}</endorseddirs>
					</compilerArguments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<outputDirectory>${endorsed.dir}</outputDirectory>
							<silent>true</silent>
							<artifactItems>
								<artifactItem>
									<groupId>javax</groupId>
									<artifactId>javaee-endorsed-api</artifactId>
									<version>7.0</version>
									<type>jar</type>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
